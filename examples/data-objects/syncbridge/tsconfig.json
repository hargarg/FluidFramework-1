{
  "extends": "@fluidframework/build-common/ts-common-config.json",
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "jsx": "react",
    "strictNullChecks": false,
    "types": [],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ]
}